<Window x:Class="Project09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project09"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="520">
    <Grid Background="#FFFF00">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="70" />
            <RowDefinition Height="40" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3">
            <Label Content="LMS talk" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1">
            <Label Content="아이디" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <TextBox x:Name="idBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Hancom Hoonminjeongeum_H"/>
        </Grid>

        <Grid Grid.Row="5" Grid.Column="1">
            <Label Content="비밀번호" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H"/>
        </Grid>

        <Grid Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <PasswordBox x:Name="passwordBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Hancom Hoonminjeongeum_H"/>
        </Grid>

        <Grid Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2">
            <Button x:Name="loginButton" Content="로그인" FontSize="28" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H" Background="#FFCE55" Click="loginButton_Click"/>
        </Grid>
        
        <Grid Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="2">
            <Button x:Name="joinButton" Content="회원가입" FontSize="28" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H" Background="#FFCE55" Click="joinButton_Click"/>
        </Grid>

    </Grid>
</Window>
