<Window x:Name="chatWindow" x:Class="Project09.ChatRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project09"
        mc:Ignorable="d"
        Title="ChatRoom" Height="750" Width="1200" Loaded="chatWindow_Loaded">
    <Grid Background="#FEE500">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="118"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1" Margin="10,10,10,10">
            <Button Content="유저 검색" FontSize="36" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H" Background="#FFCE55"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2" Margin="10,10,10,10">
            <Button Content="친구 목록" FontSize="36" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H" Background="#FFCE55"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="4" Margin="10,10,10,10">
            <Button Content="회원정보" FontSize="36" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H" Background="#FFCE55"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <Button Content="로그아웃" FontSize="36" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H" Background="#FFCE55"/>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Frame/>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <ListView d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>

        <Grid Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="4" Margin="10,10,10,10">
            <ListView x:Name="messageListView" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <ListView d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>

        <Grid Grid.Row="4" Grid.Column="1" Margin="10,10,10,10">
            <Button Content="1:1 채팅방" FontSize="36" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H" Background="#FFCE55"/>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="2" Margin="10,10,10,10">
            <Button Content="단체 채팅방" FontSize="36" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H" Background="#FFCE55"/>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <TextBox x:Name="chatBox" TextWrapping="Wrap" FontSize="36" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H" VerticalContentAlignment="Center" PreviewKeyDown="chatBox_PreviewKeyDown"/>

        </Grid>

        <Grid Grid.Row="4" Grid.Column="6" Margin="10,10,10,10">
            <Button x:Name="sendButton" Content="send" FontSize="36" FontWeight="Bold" FontFamily="Hancom Hoonminjeongeum_H" Background="#FFCE55" Click="sendButton_Click"/>
        </Grid>


    </Grid>
</Window>
